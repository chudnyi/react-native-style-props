{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [],
  "rules": {
    "arrow-parens": false,
    // Custom
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": [
      false,
      "always-prefix"
    ],
    "max-classes-per-file": [
      false
    ],
    "comment-format": [
      false
    ],
    "no-unused-variable": true,
    // General
    "no-console": [
      true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      160
    ],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "object-literal-key-quotes": false
  }
}
